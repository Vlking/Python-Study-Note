#字符串操作
name = "apple"
print(name.capitalize())#首字母大写
names = "a apple"
print(names.count("a"))#统计有多少重复
print(names.center(50,"-"))#字符串在中间左右用减号补全
print(names.endswith("le"))#判断字符串已什么结尾
print(names.find("apple"))#查找字符串的索引取出来
print(names[names.find("apple"):7])#查找字符串进行切片
tname="{name} and i am {year} old"
print(tname.format(name='YangZhiDong',year=23))#格式化字符串，并且填充到字符串里
print(tname.format_map({'name':'YangZhiDong','year':23}))#格式化字符串，并且填充到字符串里,format_map括号里的是字典
print(name.isidentifier())#是不是一个合法的变量名
print('&'.join(['1','2','3','4']))#join() 方法用于将序列中的元素以指定的字符连接生成一个新的字符串
print( name.ljust(50,'*'))#长度50，如果不够用星号补上字符串从左到右
print( name.rjust(50,'*'))#长度50，如果不够用星号补上字符串从右到左
print('Apple'.lower())#把大写换成小写
print('Apple'.upper())#把小写换成大写
print(name.replace('a','A'))#把小写a替换成大写A
print(name.rfind('a'))#把小写a替换成大写A
print('apple orange banana yellow'.split())#把字符串按空格分成列表
print('apple orange banana yellow'.swapcase())#方法用于对字符串的大小写字母进行转换
